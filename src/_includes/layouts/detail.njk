---
layout: base
---
<div class="ef-videoDetail">
    <div class="container">
        <div class="ef-videoDetail__header position-relative pt-7 pt-sm-11 pt-md-13">
            <h1 class="ef-videoDetail__heading h1 title-font -underlineBlue">
                <span class="title-font underlineBlue">
                    {{ title }}
                </span>
            </h1>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ href }}"></iframe>
            </div>
            <div class="d-flex flex-column align-items-end">
                <p class="ef-videoDetail__text text-big px-1 py-3 px-sm-5 py-sm-5">{{ description }}</p>
            </div>
        </div>
    </div>
</div>
